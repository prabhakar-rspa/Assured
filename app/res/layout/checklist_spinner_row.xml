<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="?attr/cardBackgroundColor3"
    android:id="@+id/checklistSpinnerRelativeLayout"
    >

    <ImageView
        android:id="@+id/bar_image"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/headerBackgroundColor">

    </ImageView>

    <!--android:fontFamily="@font/agenda_light"-->
    <TextView
        android:id="@+id/sectionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bar_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/bar_image"
        android:fontFamily="@font/agenda_lightcondensed"
        android:text="Placeholder"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="?attr/headerTextColor"
        android:textSize="21sp">

    </TextView>
</RelativeLayout>