<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_card"
    android:padding="16dp">


    <TextView
        android:id="@+id/what3WordsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/agenda_light"
        android:text="What 3 Words"
        android:textColor="?attr/headerTextColor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/what3WordsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:hint="Enter what 3 words"
        android:textSize="18sp"
        android:inputType="textAutoCorrect|textCapSentences|textMultiLine"
        android:background="@drawable/custom_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/what3WordsLabel" />


</androidx.constraintlayout.widget.ConstraintLayout>