<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/main_toolbar" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor">

            <TextView
                android:id="@+id/settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="92dp"
                android:elevation="2dp"
                android:fontFamily="@font/agenda_light"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.285"

                app:layout_constraintStart_toStartOf="@+id/imageView5" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="192dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:srcCompat="@drawable/background_card_headercolor_straight" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="782dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/background_card" />

            <ImageView
                android:id="@+id/settings_image"
                android:layout_width="71dp"
                android:layout_height="67dp"
                android:layout_marginBottom="84dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.11"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:srcCompat="@drawable/settings_24px" />

            <ImageView
                android:id="@+id/card"
                android:layout_width="495dp"
                android:layout_height="600dp"
                android:layout_marginBottom="60dp"
                android:background="?attr/cardBackgroundColor2"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                android:padding="4dp"/>

            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="548dp"
                android:elevation="2dp"
                android:fontFamily="@font/agenda_light"
                android:text="Appearance and Accessability"
                android:textColor="?attr/headerTextColor"
                android:textSize="23sp"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.232"
                app:layout_constraintStart_toStartOf="@+id/card" />


            <Switch
                android:id="@+id/darkSwitch"
                android:layout_width="82dp"
                android:layout_height="50dp"
                android:layout_marginBottom="460dp"
                android:elevation="2dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.912"
                app:layout_constraintStart_toStartOf="@+id/card" />

            <TextView
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="472dp"
            android:background="@android:color/transparent"
            android:elevation="2dp"
            android:ems="10"
            android:fontFamily="@font/agenda_light"
            android:inputType="textPersonName"
            android:text="Night Mode"
            android:textSize="20sp"
            android:textColor="?attr/textColor"
            app:layout_constraintBottom_toBottomOf="@+id/card"
            app:layout_constraintEnd_toEndOf="@+id/card"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="@+id/card" />

            <!-- Background Services Switch -->
            <Switch
                android:id="@+id/backgroundServicesSwitch"
                android:layout_width="82dp"
                android:layout_height="50dp"
                android:layout_marginBottom="392dp"
                android:elevation="2dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.912"
                app:layout_constraintStart_toStartOf="@+id/card" />

            <TextView
                android:id="@+id/backgroundServicesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="404dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                android:ems="10"
                android:fontFamily="@font/agenda_light"
                android:text="Background Services"
                android:textColor="?attr/textColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.053"
                app:layout_constraintStart_toStartOf="@+id/card" />

            <TextView
                android:id="@+id/editTextFontSize"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="388dp"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                android:ems="10"
                android:fontFamily="@font/agenda_light"
                android:inputType="textPersonName"
                android:text="Font Size"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.053"
                app:layout_constraintStart_toStartOf="@+id/card"
                android:textColor="?attr/textColor"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="388dp"
                android:elevation="2dp"
                android:max="2"
                android:progress="1"
                android:scaleX="1.5"
                android:scaleY="1.5"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.924"
                app:layout_constraintStart_toStartOf="@+id/card" />

            <TextView
                android:id="@+id/textView2"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="24dp"
                android:layout_marginBottom="404dp"
                android:elevation="2dp"
                android:fontFamily="@font/agenda_light"
                android:text="Aa"
                android:textSize="15sp"
                android:textColor="?attr/textColor"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.749"
                app:layout_constraintStart_toStartOf="@+id/card" />

            <TextView
                android:id="@+id/textView3"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="408dp"
                android:elevation="2dp"
                android:fontFamily="@font/agenda_light"
                android:text="Aa"
                android:textSize="20sp"
                android:textColor="?attr/textColor"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.854"
                app:layout_constraintStart_toStartOf="@+id/card" />

            <TextView
                android:id="@+id/textView4"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="404dp"
                android:elevation="2dp"
                android:fontFamily="@font/agenda_light"
                android:text="Aa"
                android:textSize="25sp"
                android:textColor="?attr/textColor"
                app:layout_constraintBottom_toBottomOf="@+id/card"
                app:layout_constraintEnd_toEndOf="@+id/card"
                app:layout_constraintHorizontal_bias="0.961"
                app:layout_constraintStart_toStartOf="@+id/card" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <!-- Navigation Drawer -->
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/main_nav_drawer" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>